<?php

/**
 * @file
 * Install and update hooks for fr_node_type_categories.
 */

use Drupal\node\Entity\NodeType;

/**
 * Implements hook_update().
 *
 * Resave all node types after installation.
 */
function fr_node_type_categories_install() {
  $node_types = NodeType::loadMultiple();
  foreach ($node_types as $node_type) {
    $node_type->save();
  }
}
